<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".WindFire" >
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        
 		<include
    		android:id="@+id/einsatzinfos"
    		layout="@layout/einsatzinfo" />

      
     <LinearLayout
            android:id="@+id/fullscreen_content_controls2"
            style="?buttonBarStyle"
            android:layout_width="725dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >
     
       		<TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:text="Windvorhersage"
	            android:textColor="@color/black_overlay"
	            android:paddingTop="30dip"
	            android:paddingLeft="20dip"
	            android:textSize="25dip"
	            android:textStyle="bold" />
       		
       		<TextView
       		    android:id="@+id/windDirection"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:textColor="@color/black_overlay"
	            android:paddingTop="30dip"
	            android:paddingLeft="20dip"
	            android:textSize="20dip"/>
       		
       		<TextView
       		    android:id="@+id/windPredictionHead"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            
	            android:textColor="@color/black_overlay"
	            android:text="Vorhersage der kommenden Stunden"
	            android:paddingTop="30dip"
	            android:paddingLeft="20dip"
	            android:textSize="20dip"
	            android:textStyle="bold"/>
       		<TextView
       		    android:id="@+id/windPrediction"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:textColor="@color/black_overlay"
	            android:paddingTop="10dip"
	            android:paddingLeft="20dip"
	            android:textSize="20dip"/>
          </LinearLayout>
          
		<include
    		android:id="@+id/leistewind"
    		layout="@layout/leistefire" />
     </LinearLayout>
</FrameLayout>
