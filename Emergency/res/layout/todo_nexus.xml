<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".ToDoFire" >
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        
 		<include
    		android:id="@+id/einsatzinfosToDo"
    		layout="@layout/einsatzinfo" />

      
     <LinearLayout
            android:id="@+id/todoll"
            style="?buttonBarStyle"
            android:layout_width="725dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >
     <LinearLayout
            android:id="@+id/todoll"
            style="?buttonBarStyle"
            android:layout_width="725dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:orientation="vertical" >
     
       		<TextView
       		    android:id="@+id/todohead"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:text="ToDo-Liste"
	            android:textColor="@color/black_overlay"
	            android:paddingTop="30dip"
	            android:paddingLeft="20dip"
	            android:textSize="25dip"
	            android:textStyle="bold" />
       		
          </LinearLayout>
          <LinearLayout
            android:id="@+id/todoll2"
            style="?buttonBarStyle"
            android:layout_width="725dp"
            android:layout_height="395dp"
            android:background="@color/white"
            android:orientation="vertical">
       		
            
          </LinearLayout>
          </LinearLayout>
          
     	
          
		<include
    		android:id="@+id/leisteToDo"
    		layout="@layout/leistefire" />
     </LinearLayout>
</FrameLayout>
