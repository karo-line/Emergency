     <LinearLayout
            android:id="@+id/fullscreen_content_controls2"
            style="?buttonBarStyle"
            android:layout_width="725dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >
            
         <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Übersetzer"
              android:textColor="@color/black_overlay"
              android:paddingLeft="20dip"
              android:textSize="25dip"
              android:layout_marginTop="30dip"
              android:textStyle="bold"/>
     
	        <Button android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Englisch"
	        android:textSize="20dip"
	        android:textStyle="bold"
	        android:id="@+id/btnEnglisch"
	        android:background="@drawable/shape"
	        android:layout_marginTop="30dip"
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"/>
	        
	        <Button android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Türkisch"
	        android:textSize="20dip"
	        android:textStyle="bold"
	        android:id="@+id/btnETurkisch"
	        android:layout_marginTop="20dip"
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"/>
	        
	        <Button android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Kroatisch"
	        android:textSize="20dip"
	        android:textStyle="bold"
	        android:id="@+id/btnKroatisch"
	        android:background="@drawable/shape"
	        android:layout_marginTop="20dip"
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"/>
	        
	        <Button android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Serbisch"
	        android:textSize="20dip"
	        android:textStyle="bold"
	        android:id="@+id/btnSerbisch"
	        android:background="@drawable/shape"
	        android:layout_marginTop="20dip"
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"/>
	        
	        <Button android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Weitere Sprachen"
	        android:textSize="20dip"
	        android:textStyle="bold"
	        android:id="@+id/btnWeitere"
	        android:background="@drawable/shape"
	        android:layout_marginTop="50dip"
	        android:layout_marginLeft="30dip"
	        android:layout_marginRight="30dip"/>
            
           
          </LinearLayout>
          
        
            
        
         <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?buttonBarStyle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:background="@color/black_overlay"
            android:orientation="vertical"
            tools:ignore="UselessParent" >
        
        		<ImageView
                android:id="@+id/dummy_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_menu_home"/>
            
            
            
            <ImageView 
                android:id="@+id/arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="380dp"
                android:src="@drawable/icon_arrow"
                android:onClick="back"/>
            
            </LinearLayout>
     </LinearLayout>
</FrameLayout>
