     <LinearLayout
            android:id="@+id/fullscreen_content_controls2"
            style="?buttonBarStyle"
            android:layout_width="725dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >
     
        <LinearLayout
            android:id="@+id/fullscreen_content_controls3"
            style="?buttonBarStyle"
            android:layout_width="725dp"
            android:layout_height="300dp"
            android:background="@color/white"
            android:orientation="horizontal" >
            
            <ImageView 
                android:id="@+id/map"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/map"
                android:onClick="startMap"/>
            
            <ImageView 
                android:id="@+id/translate"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/translation_icon"
                android:onClick="startTranslator"/>
            
            <ImageView 
                android:id="@+id/elga"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/icon_elga"
                android:onClick="startElga"/>  
            
            
            
            </LinearLayout>
            
        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?buttonBarStyle"
            android:layout_width="725dp"
            android:layout_height="300dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ekg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="30dp"
                android:onClick="startEkg"
                android:src="@drawable/icon_ekg" />

            <ImageView 
                android:id="@+id/gefahrengut"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/icon_gefahrengut"
                android:onClick="startGefahrengut"/>
            <ImageView 
                android:id="@+id/einsatzprotokoll"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/icon_report"
                android:onClick="startEinsatzprotokoll"/>
            
            
          </LinearLayout>
          </LinearLayout>
          

        
  		<include
    		android:id="@+id/leistemenu"
    		layout="@layout/leiste" />
  		
     </LinearLayout>
</FrameLayout>
