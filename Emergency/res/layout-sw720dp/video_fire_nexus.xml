<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".VideoFire" >
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        
 		<include
    		android:id="@+id/einsatzinfos"
    		layout="@layout/einsatzinfo" />

      
     <LinearLayout
            android:id="@+id/fullscreen_content_controls2"
            style="?buttonBarStyle"
            android:layout_width="915dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >
     
       		<TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:text="Video vom Einsatzort"
	            android:textColor="@color/black_overlay"
	            android:paddingTop="30dip"
	            android:paddingLeft="20dip"
	            android:textSize="25dip"
	            android:textStyle="bold" />
       		
       		<VideoView 
       		    android:layout_height="match_parent"
	        	android:layout_width="match_parent"
	        	android:id="@+id/videoView"/>
       		
          </LinearLayout>
          
		<include
    		android:id="@+id/leisteVideo"
    		layout="@layout/leistefire" />
     </LinearLayout>
</FrameLayout>
